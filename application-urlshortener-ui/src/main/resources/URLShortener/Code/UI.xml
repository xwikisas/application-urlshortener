    <property>
      <code>define('urlshortener-messages', {
  prefix: 'urlshortener.menu.action.',
  keys: [
    'done',
    'fail',
    'shortcut'
  ]
});

require(['jquery', 'xwiki-meta', 'xwiki-l10n!urlshortener-messages'], function($, xm, l10n) {
  let createShortenedURL = function() {
    const baseURL = (new URL(window.location)).origin + XWiki.contextPath;
    const params = $.param({
      'currentDocRef': XWiki.Model.serialize(xm.documentReference)
    });
    const computeIDURL = baseURL + '/rest/p/create?' + params;
    $.post(computeIDURL, params).done(response =&gt; {
      const shortenedURL = baseURL + '/short/' + response.pageID;
      navigator.clipboard.writeText(shortenedURL).then(() =&gt; {
        new XWiki.widgets.Notification(l10n['done'], 'done');
      })
    }).fail(error =&gt; {
      console.log(error);
      new XWiki.widgets.Notification(l10n['fail'], 'error');
    });
  };

  let createURLShortcut = function() {
    shortcut.add(l10n['shortcut'], function() {
      createShortenedURL();
    });
  };

  $(function() {
    createURLShortcut();

    $(document).on('click', '#urlShortener', function(e) {
      e.preventDefault();
      createShortenedURL();
    });
  });
});</code>
